<!-- app/views/devise/sessions/new.html.erb -->

<div class="flex flex-col justify-center items-center min-h-screen bg-gray-100 px-4">

  <!-- 枠 -->
  <div class="bg-white border border-gray-300 rounded-xl shadow-lg p-6 w-full max-w-md text-center">

    <!-- タイトル -->
    <h2 class="text-3xl sm:text-4xl font-bold text-green-700 mb-6">ログイン</h2>

    <!-- フォーム -->
    <%= form_with model: resource, url: session_path(resource_name), class: "space-y-6" do |f| %>

      <div class="text-left">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full p-2 border rounded" %>
      </div>

      <div class="text-left">
        <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative">
          <%= f.password_field :password,
                autocomplete: "current-password",
                id: "login_password_field",
                class: "mt-1 block w-full p-2 border rounded pr-10" %>

          <!-- 👁 アイコン（表示切替用） -->
          <button type="button"
                  class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 password-toggle-btn"
                  data-target="login_password_field">
            <%= eye_toggle_icons %>
          </button>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "ログイン情報を保存する", class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン",
              class: "w-full bg-green-500 text-white py-2 rounded hover:bg-green-400 transition" %>
      </div>
    <% end %>

    <!-- リンク -->
     <%#
    <div class="mt-4 text-sm">
      <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name),
                  class: "text-green-600 hover:underline" %><br />
    </div>
  </div>
</div>
