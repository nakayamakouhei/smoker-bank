<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false"
       class="mx-auto mb-4 w-full max-w-lg rounded border border-red-200 bg-red-50 px-4 pb-3 pt-0 text-sm text-red-800 shadow">
    <p class="m-0 font-semibold whitespace-pre-line leading-tight">
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human) %>
    </p>
    <% ordered_attributes = [:name, :email, :password, :password_confirmation] %>
    <% ordered_errors = resource.errors.each_with_object([]) do |error, array|
         attribute = error.attribute
         message = error.message
         index = ordered_attributes.index(attribute) || ordered_attributes.length
         array << [index, attribute, message]
       end.sort_by!(&:first) %>
    <ul class="mt-2 list-disc pl-5 space-y-1">
      <% ordered_errors.each do |(_, attribute, message)| %>
        <li><%= "#{resource.class.human_attribute_name(attribute)}#{message}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
