<div class="container mx-auto max-w-md py-8 space-y-6">
  <h1 class="text-2xl font-bold mb-4">お問い合わせ</h1>

  <%= form_with url: send_contact_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, "お名前", class: "block font-bold" %>
      <%= f.text_field :name, class: "border rounded w-full px-2 py-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block font-bold" %>
      <%= f.email_field :email, class: "border rounded w-full px-2 py-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :message, "お問い合わせ内容", class: "block font-bold" %>
      <%= f.text_area :message, class: "border rounded w-full px-2 py-1 h-32" %>
    </div>

    <%= f.submit "送信する", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 cursor-pointer" %>
  <% end %>
</div>
