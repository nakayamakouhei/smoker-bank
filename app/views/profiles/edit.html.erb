<div class="flex flex-col items-center flex-1 px-4 py-8">
  <div class="w-full max-w-md overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl">
    <div class="bg-gradient-to-r from-emerald-500 to-teal-500 px-6 py-6 text-left">
      <p class="text-xs font-semibold uppercase tracking-widest text-white/70">Profile</p>
      <h1 class="mt-2 text-2xl font-bold text-white">プロフィール編集</h1>
      <p class="mt-1 text-xs text-white/80">基本情報とログイン設定をこちらから変更できます。</p>
    </div>

    <div class="space-y-6 px-6 py-6">
      <% if notice.present? %>
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
          <%= notice %>
        </div>
      <% elsif alert.present? %>
        <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
          <%= alert %>
        </div>
      <% end %>

      <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |f| %>
        <div class="space-y-2">
          <%= f.label :name, class: "text-sm font-semibold text-slate-800" do %>
            ユーザー名 <span class="ml-1 text-xs text-red-500">必須</span>
          <% end %>
          <%= f.text_field :name,
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
        </div>

        <div class="space-y-2">
          <%= f.label :email, class: "text-sm font-semibold text-slate-800" do %>
            メールアドレス <span class="ml-1 text-xs text-red-500">必須</span>
          <% end %>
          <%= f.email_field :email,
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
        </div>

        <hr class="border-gray-200" />

        <% if current_user.provider == "google_oauth2" && !current_user.password_set %>
          <div class="rounded-xl border border-yellow-200 bg-yellow-50 px-4 py-3 text-xs text-yellow-700">
            Googleアカウントでログインしています。下でパスワードを設定すると、メールアドレス＋パスワードでのログインも利用できます。
          </div>
        <% else %>
          <div class="space-y-2">
            <%= f.label :current_password, "現在のパスワード", class: "text-sm font-semibold text-slate-800" %>
            <%= f.password_field :current_password,
                  class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
          </div>
        <% end %>

        <div class="space-y-2">
          <%= f.label :password, "新しいパスワード", class: "text-sm font-semibold text-slate-800" %>
          <%= f.password_field :password,
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
        </div>

        <div class="space-y-2">
          <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "text-sm font-semibold text-slate-800" %>
          <%= f.password_field :password_confirmation,
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
        </div>

        <%= f.submit "変更を保存する",
              class: "w-full rounded-lg bg-emerald-500 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-emerald-400 cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <div class="mt-6 w-full max-w-md">
    <%= link_to "ホームに戻る", authenticated_root_path,
          class: "block w-full rounded-lg bg-white px-4 py-2 text-center text-sm font-semibold text-emerald-600 shadow-lg transition hover:-translate-y-0.5 hover:bg-emerald-50" %>
  </div>
</div>
